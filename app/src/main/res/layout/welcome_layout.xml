<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Backup your DB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackup"
        android:layout_weight="1"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="copyFile" />

    <TextView
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:id="@+id/tvCurrentUser"
        android:layout_row="0"
        android:layout_column="1" />

    <Button
        android:text="Start Broadcasting"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_row="3"
        android:layout_column="1"
        android:onClick="startbroadcasting" />

    <Button
        android:text="Http request Activity"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="httpserverrequest" />

    <TextView
        android:text="Welcome :"
        android:layout_width="95dp"
        android:layout_height="83dp"
        android:id="@+id/tvwelcome"
        android:layout_row="0"
        android:layout_column="0" />

    <Button
        android:text="Stop Broadcasting"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_row="4"
        android:layout_column="1"
        android:onClick="stopbroadcasting" />

</GridLayout>
